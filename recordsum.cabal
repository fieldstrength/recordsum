name:                recordsum
version:             0.1.0.0
synopsis:            Support for generic field accessors using the "recordsum" data type pattern
-- description:
-- bug-reports:
license:             MIT
license-file:        LICENSE
author:              Cliff Harvey
maintainer:          cs.hbar+hs@gmail.com
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:
    RecordSum.Field
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.14 && <4.15,
                       generic-lens,
                       lens

  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite recordsum-tests
  ghc-options:
    -threaded
  type:
    exitcode-stdio-1.0
  main-is:
    Main.hs
  default-extensions:
    DataKinds
    DeriveGeneric
    DerivingStrategies
    DuplicateRecordFields
    TemplateHaskell
    TypeApplications
  other-modules:
    RecordSum.FieldSpec
  hs-source-dirs:
    test
  build-depends:
      recordsum

    , base >=4.14 && <4.15
    , hedgehog
    , lens